<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">
            <div class="card-header borde">
                <p>Ola {{inputNome4}} voce esta logado no modo Comprador</p>
            </div>
            <div class="lateral">
                <div >
                    <img src="https://media-exp1.licdn.com/dms/image/C4E03AQGsRdqaIE5gjA/profile-displayphoto-shrink_200_200/0?e=1590624000&v=beta&t=W6lG8JI6u27WZU7T6a-wHVjXtQ-6PEwQHQP_LiOG9eQ"
                        alt="" class="img-fluid rounded-circle lateralOne">
                    <div class="">
                    <button class="btn-primary col-md-12"><a>Filtrar</a></button>
                    <button class="btn-primary col-md-12">Filtrar</button>
                    <button class="btn-primary col-md-12">Filtrar</button>
                    <button class="btn-primary col-md-12">Filtrar</button>
                    <br><br>
                    </div>
                </div>
            </div>
            <div class="lateral">
                <br>
                <form action="" method="">
                    <button type="submit" class="btn-primary col-md-12">Filtrar</button>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <select name="inputEstado" class="form-control">
                                <option selected>Escolher...</option>
                                <option>Argentina</option>
                                <option>Bolivia</option>
                                <option>Brasil</option>
                                <option>Colombia</option>
                                <option>Chile</option>
                                <option>Ecuador</option>
                                <option>Paraguay</option>
                                <option>Perú</option>
                                <option>Uruguay</option>
                                <option>Venezuela</option>
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <select name="inputRamo" class="form-control">
                                <option selected>Escolher...</option>
                                <option>Industria</option>
                                <option>Comercio</option>
                                <option>Serviços</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-sm-10 text-left contenedor">
            <div class="contenedor-form">
                <div class="">
                    <div class="container col-md-12">
                        <div class="col-md-12 borde">
                            {{#if comprador}}
                            <ul class="list-group">
                                {{#each comprador}}
                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <img src="http://prints.ultracoloringpages.com/81463b1d918910e90ea4171935a665b1.png"
                                                style="width: 100%;">
                                        </div>
                                        <div class="col-md-5">
                                            <h5>{{inputRamo}}</h5>{{inputDes}}
                                        </div>
                                        <div class="col-md-5">
                                            <h5>{{inputRaSoc}}</h5>
                                            <h5>Endereço:<br>{{inputAddress}}
                                                , {{inputCity}}
                                                , {{inputEstado}}
                                            </h5>
                                            <h5>Compra:<br> {{inputProduto}}</h5>
                                        </div>
                                        <div class="col-md-12">
                                            <p class="contato">Contato do comprador {{inputNome4}} | Telefone {{inputFone}} | Celular {{inputCelfone}} | e-mail {{inputEmail4}}</p>
                                        </div>
                                    </div>
                                </li>
                                {{/each}}
                            </ul>
                            {{else}}
                            <h1>Não existe ninguem</h1>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>